<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/comments_list_footer"
	android:orientation="vertical"
	android:paddingBottom="10dp">

	<TextView
		style="@style/MainTableText"
		android:id="@+id/main_app_status_line"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:layout_gravity="center"
		android:paddingBottom="15dp"
		android:paddingTop="10dp" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:background="@drawable/button_background" android:id="@+id/main_autosync_button">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:id="@+id/main_button_autosync"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_sync"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>

			<TextView
				style="@style/MainTableText"
				android:id="@+id/main_autosync_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="auto synchronization"/>
		</LinearLayout>
	</RelativeLayout>
	
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:id="@+id/main_notification_button"
		android:background="@drawable/button_background">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:id="@+id/main_button_notification"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_notification"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>

			<TextView
				style="@style/MainTableText"
				android:id="@+id/main_notification_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="notifications"/>
		</LinearLayout>
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:id="@+id/main_export_button"
		android:background="@drawable/button_background">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:id="@+id/main_button_export"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_export"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>

			<TextView
				style="@style/MainTableText"
				android:id="@+id/main_export_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="statistics data export"/>
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:id="@+id/main_import_button"
		android:background="@drawable/button_background">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:id="@+id/main_button_import"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_import"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>

			<TextView
				style="@style/MainTableText"
				android:id="@+id/main_export_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="statistics data import"/>
		</LinearLayout>
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:id="@+id/main_ghost_button"
		android:background="@drawable/button_background">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:id="@+id/main_button_ghost"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_ghost"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>


			<TextView
				style="@style/MainTableText"
				android:id="@+id/main_autosync_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="select apps to hide"/>
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:id="@+id/main_feedback_button"
		android:background="@drawable/button_background">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="visible"
			android:paddingLeft="20dp">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/image_button"
				android:layout_gravity="center">

				<ImageView
					android:layout_height="wrap_content"
					android:src="@drawable/icon_feedback"
					android:layout_width="wrap_content"
					android:padding="4dp"></ImageView>

			</RelativeLayout>


			<TextView
				style="@style/MainTableText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center" android:text="report bugs and request features"/>
		</LinearLayout>

	</RelativeLayout>


	<TextView
		style="@style/MainTableText"
		android:id="@+id/main_app_account_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="account name"
		android:layout_gravity="center"
		android:paddingBottom="5dp"
		android:paddingTop="15dp" />


</LinearLayout>
