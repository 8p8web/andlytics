

<selector
	xmlns:android="http://schemas.android.com/apk/res/android">


	<item
		android:state_selected="false"
		android:state_pressed="true">
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="0dp"
				android:bottom="2dp"
				android:right="12dp"
				android:left="12dp"
				android:drawable="@drawable/row_selected_borderless_bottom" />
		</layer-list>

	</item>

	<item
		android:state_selected="true">
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="0dp"
				android:bottom="2dp"
				android:right="12dp"
				android:left="12dp"
				android:drawable="@drawable/row_selected_borderless_bottom" />
		</layer-list>
	</item>

	<item>
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="0dp"
				android:bottom="2dp"
				android:right="12dp"
				android:left="12dp"
				android:drawable="@drawable/row_normal_borderless_bottom" />
		</layer-list>
	</item>


</selector>