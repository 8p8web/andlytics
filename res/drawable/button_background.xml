

<selector
	xmlns:android="http://schemas.android.com/apk/res/android">


	<item
		android:state_selected="false"
		android:state_pressed="true">
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="5dp"
				android:bottom="5dp"
				android:right="10dp"
				android:left="10dp"
				android:drawable="@drawable/row_selected" />
		</layer-list>

	</item>

	<item
		android:state_selected="true">
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="5dp"
				android:bottom="5dp"
				android:right="10dp"
				android:left="10dp"
				android:drawable="@drawable/row_selected" />
		</layer-list>
	</item>

	<item>
		<layer-list
			xmlns:android="http://schemas.android.com/apk/res/android">
			<item
				android:top="5dp"
				android:bottom="5dp"
				android:right="10dp"
				android:left="10dp"
				android:drawable="@drawable/row_normal" />
		</layer-list>
	</item>


</selector>